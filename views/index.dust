{>layout/}
{<content}
	{#message}
		<div class="alert fade in alert-{type}">
			<button class="close" data-dismiss="alert">&times;</button>
			{desc}
		</div>
	{/message}

	<!-- Slider top of page -->
	<div class="slider">
		<ul class="slides">
		 <li>
			 <img src="../images/header1.jpg"> <!-- random image -->
			 <div class="caption center-align">
				 <h3>Reserve Now</h3>
				 <h5 class="light grey-text text-lighten-3">Don't like waiting? Reserve a table now</h5>
			 </div>
		 </li>
		 <li>
			 <img src="../images/breakfast.jpg"> <!-- random image -->
			 <div class="caption left-align">
				 <h3>Premium food, affordable price.</h3>
				 <h5 class="light grey-text text-lighten-3">Great food.  An experience you will enjoy.</h5>
			 </div>
		 </li>
		 <li>
			 <img src="../images/greatservice.jpg"> <!-- random image -->
			 <div class="caption center-align">
				 <h3>In Person. Over the phone. Online.</h3>
				 <h5 class="light grey-text text-lighten-3">We make it convenient for you.  Order now.</h5>
			 </div>
		 </li>
		</ul>
	</div>

	<!-- About Us -->
	<div class="container">
    <div class="section center">
			<h2 >About Us</h2>
			<div class="row">
				<div class="cf"></div>
				<div class="col m12 ">
					<p class="flow-text">30 years in the making.  Family owned.  If you haven't been told yet, we are the best in town.</p>
				</div>
			</div>
    </div>
  </div>


	<!-- Make A Reservation -->
	<div class="container">
		<h2 class="center-align">Make a reservation</h2>
		<div class="row">
	    <form class="col s12">
	      <div class="row">
	        <div class="input-field col s6">
	          <input placeholder="John Smith" id="name" type="text" class="validate">
	          <label for="name">Name</label>
	        </div>
	        <div class="input-field col s6">
	          <input placeholder="1234567890" id="phone" type="tel" length="10" maxlength="10" class="validate">
	          <label for="phone">Phone</label>
	        </div>
	      </div>
	      <div class="row">
					<div class="input-field col s6">
	          <input placeholder="johnsmith@gmail.com" id="email" type="email" class="validate">
	          <label for="email" data-error="Invalid Email" data-success="Valid Email">Email</label>
	        </div>
	        <div class="input-field col s6">
	          <input placeholder=3 id="totalGuest" type="number" min="1" max="100" maxlength="3" class="validate">
	          <label for="totalGuest">How many people?</label>
	        </div>
	      </div>
	      <div class="row">
					<div class="input-field col s6">
	          <input id="reservationDate" type="date" class="datepicker">
	          <label for="reservationDate">Date</label>
	        </div>
	        <div class="input-field col s6">
	          <input id="time" type="time"  class="validate">
	          <label for="time">Time</label>
	        </div>
	      </div>
				<div class="row">
					<div class="col s12 center-align">
						<button class="btn waves-effect waves-light" type="submit" name="action">Reserve Table
	 						<i class="material-icons right">done</i>
					 	</button>
			 		</div>
	      </div>
	    </form>
	  </div>
	</div>

	<!-- Parallax Fresh Produce -->
	<div class="parallax-container valign-wrapper">
		<div class="section no-pad-bot">
      <div class="container">
        <div class="row center">
          <h5 class="header col s12 light">Nothing beats fresh.  We support our local farmers.</h5>
        </div>
      </div>
    </div>
		<div class="parallax parallax-filter"><img src="../images/localfarmer.jpg"></div>
	</div>

	<!-- Chefs -->
	<div class="container valign-wrapper fullwidth">
    <div class="section center-block">
			<!--   Our Chefs   -->
			<h2 class="center-align">Our Chefs</h2>
			<div class="row">
				<div class="cf"></div>
				<div class="col m12 ">
					<p class="flow-text center">Our restaurant wouldn't serve its great food without great chefs. Skilled.  Passionate.  Dedicated.</p>
				</div>
			</div>
      <!--   List of Chefs   -->
      <div class="row center">
        <div class="col s12 m6">
            <h5>David Garcia</h5>
            <p class="light">Cupcake ipsum dolor sit amet tiramisu cotton candy. Donut dragée candy canes bonbon caramels jujubes jelly topping.</p>
        </div>
        <div class="col s12 m6">
            <h5>Greg Flourant</h5>
            <p class="light">Cupcake ipsum dolor sit amet tiramisu cotton candy. Donut dragée candy canes bonbon caramels jujubes jelly topping</p>
        </div>
      </div>
    </div>
  </div>


	<!-- Parallax Great Food-->
	<div class="parallax-container valign-wrapper">
		<div class="section no-pad-bot">
      <div class="container">
        <div class="row center">
          <h5 class="header col s12 light">Local Favorite.  Come find out why if you're friends haven't told you.</h5>
        </div>
      </div>
    </div>
		<div class="parallax parallax-filter"><img src="../images/greatfood.jpg"></div>
	</div>

	<br/><br/>

	<!-- Our Menu -->
  <div class='container' id='content'>

	  <div class='row'>
	    <div class='col s3'>
	      <div class='image'>
	        <img alt="Chicken Sandwich" src="../images/chicken.jpg" />
	      </div>
	      <div class='details'>
	        20.00$
	        <a href="/orderConfirm?orderAmount=37.00&orderDescription=ChickenSandwich" class="btn btn-small" data-disable-with="Procesing.." data-method="get" rel="nofollow">Buy</a>
	      </div>
	    </div>
	    <div class='col s3'>
	      <div class='image'>
	        <img alt="Turkey Sandwich" src="../images/turkey.jpg" />
	      </div>
	      <div class='details'>
	        20.00$
	        <a href="/orderConfirm?orderAmount=23.00&orderDescription=TurkeySandwich" class="btn btn-small" data-disable-with="Procesing.." data-method="get" rel="nofollow">Buy</a>
	      </div>
	    </div>
	    <div class='col s3'>
	      <div class='image'>
	        <img alt="Ham Sandwich" src="../images/ham.jpg" />
	      </div>
	      <div class='details'>
	        20.00$
	        <a href="/orderConfirm?orderAmount=9.00&orderDescription=HamSandwich" class="btn btn-small" data-disable-with="Procesing.." data-method="get" rel="nofollow">Buy</a>
	      </div>
	    </div>
			<div class='col s3'>
	      <div class='image'>
	        <img alt="Tuna Sandwich" src="../images/tuna.jpg" />
	      </div>
	      <div class='details'>
	        20.00$
	        <a href="/orderConfirm?orderAmount=7.00&orderDescription=TunaSandwich" class="btn btn-small" data-disable-with="Procesing.." data-method="get" rel="nofollow">Buy</a>
	      </div>
	    </div>
	  </div>
	  <br/><br/><br/>
	</div>
{/content}
